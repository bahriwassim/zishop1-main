# Configuration de l'environnement ZiShop
NODE_ENV=development

# Configuration du serveur
PORT=5000
HOST=0.0.0.0

# Configuration de la base de données
DATABASE_URL=postgresql://username:password@localhost:5432/zishop_db

# Configuration Supabase (optionnel)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE=your-service-role-key

# Configuration de sécurité
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Configuration des limites
MAX_FILE_SIZE=10485760
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des notifications
NOTIFICATION_ENABLED=true
WEBSOCKET_PORT=5000

# Configuration des logs
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

# Configuration CORS (développement)
CORS_ORIGIN_DEV=http://localhost:3000,http://localhost:5000
CORS_ORIGIN_PROD=https://zishop.co,https://www.zishop.co

# Configuration de l'API
API_VERSION=v1
API_PREFIX=/api
